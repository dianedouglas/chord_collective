<div class="form-group">
  <label for="chord_name">Name</label>
  <input id="chord_name" class="form-control" name="chord[name]" type="text" value="<%= @chord.name %>">
</div>
<div class="form-group">
  <label for="note1">Note #1</label>
  <select id="note1" class="form-control note" name="note[1][note_id]" type="text">
    <% @first_time = true %>

    <% Note.all.each do |note| %>
      <% if @first_time == true %>
        <% @first_time = false %>
        <% if @chord.notes.length > 0 %>
          <option value="None">None</option>
        <% else %>
          <option value="None" selected>None</option>
        <% end %>
      <% end %>

      <% if @chord.notes.length > 0 %>
        <% if @chord.notes[0].id == note.id %>
          <option value="<%=note.id%>" selected><%=note.identifier%></option>
        <% else %>
          <option value="<%=note.id%>"><%=note.identifier%></option>
        <% end %>
      <% else %>
        <option value="<%=note.id%>"><%=note.identifier%></option>
      <% end %>

    <% end %>
    <% @first_time = false %>
  </select>
</div>

